<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.simplilearn.hibernate">
	<class name="Student" table="STUDENT_INFO">
		<id name="sid" column="STUDENT_ID" type="int">	
		<generator class="increment" />	
		</id>		
		<property name="sname"  column="STUDENT_NAME"/>
		<property name="semail" column="STUDENT_EMAIL" />
		<property name="sphone" column="STUDENT_PHONE" type="long" />
		<property name="scity" column="STUDENT_CITY" type="string" />
		<property name="sbal" column="STUDENT_BALANCE" type="double" />
	</class>
</hibernate-mapping>
