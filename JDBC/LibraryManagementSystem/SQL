
USE simplilearn;
	
CREATE TABLE BOOKS(
		     BID int NOT NULL PRIMARY KEY,
		     BNAME varchar (255),
		     BAUTHOR varchar (255),
		     BPUB varchar (255),
		     BPRICE INT,
		     BISBN varchar (255)     
		     );
		     
INSERT INTO BOOKS VALUES (?,?,?,?,?,?);
UPDATE BOOKS set BPRICE = ? where BID = ?
DELETE FROM BOOKS WHERE BID = ?
SELECT * FROM BOOKS WHERE BID = ?

		     

